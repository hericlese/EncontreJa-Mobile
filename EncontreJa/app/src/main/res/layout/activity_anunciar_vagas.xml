                            android:layout_marginStart="2dp"
                            android:autoSizeTextType="uniform"
                            android:text=" Contrato:"
                            android:textColor="#6f6f6f"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editTextContratoVaga"
