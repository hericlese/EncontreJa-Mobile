<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:openDrawer="end"
    android:id="@+id/drawer"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".MainActivityEmpresa">


   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <androidx.appcompat.widget.Toolbar
           android:id="@+id/toolbar"
           android:layout_width="match_parent"
           android:layout_height="300dp"
           android:src="@drawable/header"
           android:background="@drawable/header"/>

       <TextView
           android:layout_width="180dp"
           android:layout_height="110dp"
           android:layout_alignParentStart="true"
           android:layout_marginStart="50dp"
           android:layout_marginTop="10dp"
           android:fontFamily="@font/quadrantabold"
           android:text="EncontreJá"
           android:textAlignment="center"
           android:textColor="#ffff"
           android:textSize="36dp"
           android:textStyle="bold" />

       <TextView
           android:layout_width="210dp"
           android:layout_height="110dp"
           android:layout_alignParentStart="true"
           android:layout_alignParentEnd="true"
           android:layout_marginStart="10dp"
           android:layout_marginTop="60dp"
           android:layout_marginEnd="120dp"

           android:fontFamily="@font/quadrantabold"
           android:text="Anuncie uma vaga ou EncontreJá seu profissional de forma objetiva e rápida!!!"
           android:textAlignment="viewStart"
           android:textColor="@color/colorAccent"
           android:textSize="14dp" />

       <ScrollView
           android:layout_alignParentBottom="true"
           android:fillViewport="true"
           android:layout_marginTop="90dp"
           android:layout_width="match_parent"
           android:layout_marginBottom="10dp"
           android:layout_height="match_parent"
           android:alignmentMode="alignMargins"
           android:columnOrderPreserved="false"
           android:orientation="vertical"
           android:rowCount="9"
           android:scrollbars="vertical"
           android:padding="5dp"
           >

       <GridLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:alignmentMode="alignMargins"
           android:columnCount="2"
           android:columnOrderPreserved="false"
           android:rowCount="3">

           <androidx.cardview.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:layout_margin="12dp"
               app:cardCornerRadius="12dp"
               app:cardElevation="6dp">

               <LinearLayout
                   android:id="@+id/card_anunciosMain"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:orientation="vertical"
                   android:padding="1dp">

                   <ImageView
                       android:layout_marginTop="2dp"
                       android:layout_width="140dp"
                       android:layout_height="150dp"
                       android:layout_gravity="center"
                       android:src="@drawable/btnprofissionais" />

                   <TextView
                       android:layout_gravity="center"
                       android:layout_width="140dp"
                       android:layout_height="52dp"
                       android:layout_marginTop="2dp"
                       android:text="Procurar\n Profissional"
                       android:textAlignment="center"
                       android:textColor="#6f6f6f"
                       android:textSize="18sp"
                       android:textStyle="bold"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:layout_margin="12dp"
               app:cardCornerRadius="12dp"
               app:cardElevation="6dp">

               <LinearLayout
                   android:id="@+id/card_AnunciarVagaMain"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:orientation="vertical"
                   android:padding="1dp">

                   <ImageView
                       android:layout_gravity="center"
                       android:layout_marginTop="2dp"
                       android:layout_width="140dp"
                       android:layout_height="150dp"
                       android:padding="9dp"
                       android:src="@drawable/btnvagas2" />

                   <TextView
                       android:layout_gravity="center"
                       android:layout_width="140dp"
                       android:layout_height="52dp"
                       android:layout_marginTop="2dp"
                       android:text="Anunciar uma\n Vaga"
                       android:textAlignment="center"
                       android:textColor="#6f6f6f"
                       android:textSize="18sp"
                       android:textStyle="bold"/>


               </LinearLayout>
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView

               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:layout_margin="12dp"
               app:cardCornerRadius="12dp"
               app:cardElevation="6dp">

               <LinearLayout
                   android:id="@+id/card_MinhasVagaMain"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:orientation="vertical"
                   android:padding="1dp">

                   <ImageView
                       android:layout_gravity="center"
                       android:layout_marginTop="2dp"
                       android:layout_width="140dp"
                       android:layout_height="150dp"
                       android:padding="9dp"
                       android:src="@drawable/btnvagass" />

                   <TextView
                       android:layout_gravity="center"
                       android:layout_width="140dp"
                       android:layout_height="52dp"
                       android:layout_marginTop="2dp"
                       android:text="Minhas \n Vagas"
                       android:textAlignment="center"
                       android:textColor="#6f6f6f"
                       android:textSize="18sp"
                       android:textStyle="bold"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:layout_margin="12dp"
               app:cardCornerRadius="12dp"
               app:cardElevation="6dp">

               <LinearLayout
                   android:id="@+id/card_EditarCadastroEmpresaMain"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:orientation="vertical"
                   android:padding="1dp">

                   <ImageView
                       android:layout_gravity="center"
                       android:layout_marginTop="2dp"
                       android:layout_width="140dp"
                       android:layout_height="150dp"
                       android:padding="9dp"
                       android:src="@drawable/ic_editvaga24dp" />

                   <TextView
                       android:layout_gravity="center"
                       android:layout_width="140dp"
                       android:layout_height="52dp"
                       android:layout_marginTop="2dp"
                       android:text="Editar \n Cadastro"
                       android:textAlignment="center"
                       android:textColor="#6f6f6f"
                       android:textSize="18sp"
                       tools:ignore="HardcodedText"
                       android:textStyle="bold"/>


               </LinearLayout>
           </androidx.cardview.widget.CardView>
       </GridLayout>
       </ScrollView>

   </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffff"
        app:headerLayout="@layout/header"
        app:itemTextColor="#000000"
        android:textSize="16dp"
        app:menu="@menu/menu_item" />



</androidx.drawerlayout.widget.DrawerLayout>