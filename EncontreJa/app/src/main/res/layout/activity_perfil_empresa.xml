<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:openDrawer="end"
    android:id="@+id/drawer"
    android:background="#fff"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/header"
            android:background="@drawable/header"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/quadrantabold"
            android:text="Meu Perfil"
            android:textAlignment="textStart"
            android:textColor="#ffff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="150dp"
            android:fontFamily="@font/quadrantabold"
            android:text="Dados de seu perfil abaixo"
            android:textAlignment="viewStart"
            android:textColor="@color/colorAccent"
            android:textSize="14dp" />



        <ScrollView
            android:layout_alignParentBottom="true"
            android:fillViewport="true"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="match_parent"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:orientation="vertical"
            android:rowCount="9"
            android:scrollbars="vertical"
            android:padding="5dp"
            >


            <androidx.cardview.widget.CardView
                android:alignmentMode="alignMargins"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="25dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:layout_column="0"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="2dp"
                        android:autoSizeTextType="uniform"
                        android:text="Empresa"
                        android:textAlignment="center"
                        android:textColor="#6f6f6f"
                        android:textSize="12sp"
                        android:textStyle="bold" />



                    <TextView
                        android:id="@+id/textEmpresaEmpresa"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:background="#FAF8F8"
                        android:ems="10"
                        android:shadowRadius="12"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#cccc"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?attr/textAppearanceListItemSmall"/>


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:layout_column="0"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="2dp"
                        android:autoSizeTextType="uniform"
                        android:text="Email"
                        android:textAlignment="center"
                        android:textColor="#6f6f6f"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textEmailEmpresa"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="#FAF8F8"
                        android:textSize="14dp"
                        android:layout_marginTop="10dp"
                        android:ems="10" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#cccc"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?attr/textAppearanceListItemSmall"/>


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:layout_column="0"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="2dp"
                        android:autoSizeTextType="uniform"
                        android:text="Email de empresa"
                        android:textAlignment="center"
                        android:textColor="#6f6f6f"
                        android:textSize="12sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/textEmailCPerfilProf"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="#FAF8F8"
                        android:textSize="14dp"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#cccc"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?attr/textAppearanceListItemSmall"/>


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:layout_column="0"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="2dp"
                        android:autoSizeTextType="uniform"
                        android:text="Responsavel pelo cadastro"
                        android:textAlignment="center"
                        android:textColor="#6f6f6f"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textResponsavelEmpresa"
                        android:layout_width="200dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="15dp"
                        android:background="#FAF8F8"
                        android:layout_marginEnd="15dp"
                        android:textSize="14dp"
                        android:layout_marginTop="10dp"
                        android:ems="10"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#cccc"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?attr/textAppearanceListItemSmall"/>


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:layout_column="0"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="2dp"
                        android:autoSizeTextType="uniform"
                        android:text="Descrição da empresa"
                        android:textAlignment="center"
                        android:textColor="#6f6f6f"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textDescricaoEmpresa"
                        android:layout_width="200dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="15dp"
                        android:background="#FAF8F8"
                        android:layout_marginTop="10dp"
                        android:textSize="14dp"
                        android:ems="10"/>



                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        app:cardCornerRadius="12dp"
                        android:background="#CCCC"
                        app:cardElevation="6dp"
                        >

                        <LinearLayout
                            android:id="@+id/btnRegistrarUsuario"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="3dp"
                                android:text="Alterar Dados"
                                android:textAlignment="center"
                                android:textColor="#6f6f6f"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </ScrollView>

    </RelativeLayout>




    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffff"
        app:headerLayout="@layout/header"
        app:itemTextColor="#000000"
        android:textSize="16dp"
        app:menu="@menu/menu_item" />


</androidx.drawerlayout.widget.DrawerLayout>