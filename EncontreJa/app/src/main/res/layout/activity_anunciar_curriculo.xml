<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:openDrawer="end"
    android:id="@+id/drawer"
    android:background="#fff"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/header"
            android:background="@drawable/header"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/quadrantabold"
            android:text="Cadastrar Curriculo"
            android:textAlignment="textStart"
            android:textColor="#ffff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="150dp"
            android:fontFamily="@font/quadrantabold"
            android:text="Preencha o formulário abaixo"
            android:textAlignment="viewStart"
            android:textColor="@color/colorAccent"
            android:textSize="14dp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:fillViewport="true"
            android:orientation="vertical"
            android:padding="5dp"
            android:rowCount="9"
            android:scrollbars="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:columnCount="1"
                android:rowCount="4"
                android:columnOrderPreserved="false">


           <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                android:alignmentMode="alignMargins"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="15dp"
                        android:layout_column="0"
                        android:layout_marginStart="2dp"
                        android:autoSizeTextType="uniform"
                        android:text="Curriculo"
                        android:textColor="#6f6f6f"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/competencia2vaga"
                        android:layout_width="fill_parent"
                        android:layout_height="15dp"
                        android:layout_column="0"
                        android:layout_marginStart="2dp"
                        android:autoSizeTextType="uniform"
                        android:text="Nome:"
                        android:textColor="#6f6f6f"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextNomeCurriculo"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        android:background="#FAF8F8"
                        android:ems="10"
                        android:hint=" Digite seu nome completo"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.114" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="15dp"
                        android:layout_column="0"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="10dp"
                        android:autoSizeTextType="uniform"
                        android:text="Objetivo:"
                        android:textColor="#6f6f6f"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextObjetivoCurriculo"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        android:background="#FAF8F8"
                        android:ems="10"
                        android:gravity="start|top"
                        android:hint=" Resumidamente dite seus objetivos profissionais: "
                        android:inputType="textMultiLine"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="15dp"
                        android:layout_column="0"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="10dp"
                        android:autoSizeTextType="uniform"
                        android:text="Formações:"
                        android:textColor="#6f6f6f"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextFormacaoCurriculo"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        android:background="#FAF8F8"
                        android:ems="10"
                        android:gravity="start|top"
                        android:hint=" Formações atualizadas como: \n Faculdade1 X \n Curso  X\n Inicio 04-2020 Fim 04-2025 \n \n Faculdade2 X \n Curso  X\n Inicio 04-2020 Fim 04-2025 \n \n Faculdade3 X \n Curso  X\n Inicio 04-2020 Fim 04-2025"
                        android:inputType="textMultiLine"
                        android:textSize="9dp"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_column="0"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="10dp"
                        android:autoSizeTextType="uniform"
                        android:text="Experiencias: \n 1"
                        android:textColor="#6f6f6f"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextExperiencias1Curriculo"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        android:background="#FAF8F8"
                        android:ems="10"
                        android:gravity="start|top"
                        android:hint=" Experiencias como:\n Cargo X\n Empresa X\n Exercia X função \n Inicio 04-2020 Fim 04-2025 \n Exercia a função de ......."
                        android:inputType="textMultiLine"
                        android:textSize="9dp"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_column="0"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="10dp"
                        android:autoSizeTextType="uniform"
                        android:text="Experiencias: \n 2"
                        android:textColor="#6f6f6f"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextExperiencias2Curriculo"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        android:background="#FAF8F8"
                        android:ems="10"
                        android:gravity="start|top"
                        android:hint=" Experiencias como:\n Cargo X\n Empresa X\n Exercia X função \n Inicio 04-2020 Fim 04-2025 \n Exercia a função de ......."
                        android:inputType="textMultiLine"
                        android:textSize="9dp"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_column="0"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="10dp"
                        android:autoSizeTextType="uniform"
                        android:text="Experiencias: \n 3"
                        android:textColor="#6f6f6f"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextExperiencias3Curriculo"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        android:background="#FAF8F8"
                        android:ems="10"
                        android:gravity="start|top"
                        android:hint=" Experiencias como:\n Cargo X\n Empresa X\n Exercia X função \n Inicio 04-2020 Fim 04-2025 \n Exercia a função de ......."
                        android:inputType="textMultiLine"
                        android:textSize="9dp"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="15dp"
                        android:layout_column="0"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="10dp"
                        android:autoSizeTextType="uniform"
                        android:text="Cursos:"
                        android:textColor="#6f6f6f"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextCursosCurriculo"
                        android:layout_width="match_parent"
                        android:layout_height="155dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        android:background="#FAF8F8"
                        android:ems="10"
                        android:gravity="start|top"
                        android:hint=" Instituição1: \n Curso1 X \n Detalhes1 X\n Inicio 04-2020 Fim 04-2025 \n \n Instituição2: \n Curso2 X \n Detalhes2 X\n Inicio 04-2020 Fim 04-2025 \n \n Instituição3: \n Curso3 X \n Detalhes3 X\n Inicio 04-2020 Fim 04-2025 \n \n"
                        android:inputType="textMultiLine"
                        android:textSize="9dp"
                        app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="15dp"
                        android:layout_column="0"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="10dp"
                        android:autoSizeTextType="uniform"
                        android:text="Links:"
                        android:textColor="#6f6f6f"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextLinksCurriculo"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        android:background="#FAF8F8"
                        android:ems="10"
                        android:gravity="start|top"
                        android:hint=" Campo dedicado para links e informações adicionais: \n linkedin.com/in \n https://github.com/explore"
                        android:inputType="textMultiLine"
                        android:textSize="9dp"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="15dp"
                        android:layout_column="0"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="10dp"
                        android:autoSizeTextType="uniform"
                        android:text="Competências Extras:"
                        android:textColor="#6f6f6f"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextCompetenciaExtCurriculo"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        android:background="#FAF8F8"
                        android:ems="10"
                        android:gravity="start|top"
                        android:hint=" Campo dedicado para competências extras (Separe 3 competências principais para preencher no proximo bloco:
                         \n Conhecimento em Excel Avançado \n Conhecimento em Ingles Intermediario \n Conhecimento em SQL \n Conhecimento em Hardware Medio"
                        android:inputType="textMultiLine"
                        android:textSize="9dp"
                        app:layout_constraintStart_toStartOf="parent" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:orientation="vertical"
                        android:padding="5dp">


                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="15dp"
                            android:layout_marginStart="2dp"
                            android:autoSizeTextType="uniform"
                            android:text="1ª Competência em destaque:"
                            android:textAlignment="center"
                            android:textColor="#6f6f6f"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="15dp"
                            android:layout_marginStart="2dp"
                            android:autoSizeTextType="uniform"
                            android:text="Competência:"
                            android:textColor="#6f6f6f"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editTextCompetencia1Curriculo"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:background="#FAF8F8"
                            android:ems="10"
                            android:gravity="start|top"
                            android:hint=" Exemplo Ingles:"
                            android:inputType="textMultiLine"
                            android:textSize="14dp"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="15dp"
                            android:layout_marginStart="2dp"
                            android:autoSizeTextType="uniform"
                            android:text="Nivel:"
                            android:textColor="#6f6f6f"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/checkBoxComp1N1Curriculo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:scaleX="0.70"
                            android:scaleY="0.70"
                            android:text="Básico"
                            android:textSize="12dp"
                             />

                        <CheckBox
                            android:id="@+id/checkBoxComp1N2Curriculo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="120dp"
                            android:layout_marginTop="-32dp"
                            android:scaleX="0.70"
                            android:scaleY="0.70"
                            android:text="Intermediário "
                            android:textSize="12dp" />

                        <CheckBox
                            android:id="@+id/checkBoxComp1N3Curriculo"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="250dp"
                            android:layout_marginTop="-33dp"
                            android:scaleX="0.70"
                            android:scaleY="0.70"
                            android:text="Avançado"
                            android:textSize="12dp" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="15dp"
                            android:layout_marginStart="2dp"
                            android:autoSizeTextType="uniform"
                            android:text="2ª Competência em destaque:"
                            android:textAlignment="center"
                            android:textColor="#6f6f6f"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="15dp"
                            android:layout_marginStart="2dp"
                            android:autoSizeTextType="uniform"
                            android:text=" Competência:"
                            android:textColor="#6f6f6f"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editTextCompetencia2Curriculo"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:background="#FAF8F8"
                            android:ems="10"
                            android:gravity="start|top"
                            android:hint=" Exemplo Excel:"
                            android:inputType="textMultiLine"
                            android:textSize="14dp"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="15dp"
                            android:layout_marginStart="2dp"
                            android:autoSizeTextType="uniform"
                            android:text="Nivel:"
                            android:textColor="#6f6f6f"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/checkBoxComp2N1Curriculo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:scaleX="0.70"
                            android:scaleY="0.70"
                            android:text="Básico"
                            android:textSize="12dp"/>

                        <CheckBox
                            android:id="@+id/checkBoxComp2N2Curriculo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="120dp"
                            android:layout_marginTop="-32dp"
                            android:scaleX="0.70"
                            android:scaleY="0.70"
                            android:text="Intermediário "
                            android:textSize="12dp"/>

                        <CheckBox
                            android:id="@+id/checkBoxComp2N3Curriculo"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="250dp"
                            android:layout_marginTop="-33dp"
                            android:scaleX="0.70"
                            android:scaleY="0.70"
                            android:text="Avançado"
                            android:textSize="12dp" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:orientation="vertical"
                        android:padding="5dp">


                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="15dp"
                            android:layout_marginStart="2dp"
                            android:autoSizeTextType="uniform"
                            android:text="3ª Competência em destaque:"
                            android:textAlignment="center"
                            android:textColor="#6f6f6f"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="15dp"
                            android:layout_marginStart="2dp"
                            android:autoSizeTextType="uniform"
                            android:text="Competência:"
                            android:textColor="#6f6f6f"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editTextCompetencia3Curriculo"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:background="#FAF8F8"
                            android:ems="10"
                            android:gravity="start|top"
                            android:hint="  Exemplo AutoCard:"
                            android:inputType="textMultiLine"
                            android:textSize="14dp"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="15dp"
                            android:layout_marginStart="2dp"
                            android:autoSizeTextType="uniform"
                            android:text="Nivel:"
                            android:textColor="#6f6f6f"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/checkBoxComp3N1Curriculo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:scaleX="0.70"
                            android:scaleY="0.70"
                            android:text="Básico"
                            android:textSize="12dp"/>

                        <CheckBox
                            android:id="@+id/checkBoxComp3N2Curriculo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="120dp"
                            android:layout_marginTop="-32dp"
                            android:scaleX="0.70"
                            android:scaleY="0.70"
                            android:text="Intermediário "
                            android:textSize="12dp"/>

                        <CheckBox
                            android:id="@+id/checkBoxComp3N3Curriculo"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="250dp"
                            android:layout_marginTop="-33dp"
                            android:scaleX="0.70"
                            android:scaleY="0.70"
                            android:text="Avançado"
                            android:textSize="12dp"/>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:cardCornerRadius="12dp"
                    android:background="#CCCC"
                    app:cardElevation="6dp"
                    >

                    <LinearLayout
                        android:id="@+id/btnRegistrarCurriculo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="3dp"
                            android:text="Registrar"
                            android:textAlignment="center"
                            android:textColor="#6f6f6f"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>




            </GridLayout>

        </ScrollView>

    </RelativeLayout>




    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffff"
        app:headerLayout="@layout/header"
        app:itemTextColor="#000000"
        android:textSize="16dp"
        app:menu="@menu/menu_item" />


</androidx.drawerlayout.widget.DrawerLayout>
