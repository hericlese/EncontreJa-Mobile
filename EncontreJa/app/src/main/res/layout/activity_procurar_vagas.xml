<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:openDrawer="end"
    android:id="@+id/drawer"
    android:background="#fff"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/header"
            android:background="@drawable/header"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/quadrantabold"
            android:text="Busca Vaga"
            android:textAlignment="textStart"
            android:textColor="#ffff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="150dp"
            android:fontFamily="@font/quadrantabold"
            android:text="Preencha o formulário abaixo"
            android:textAlignment="viewStart"
            android:textColor="@color/colorAccent"
            android:textSize="14dp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:fillViewport="true"
            android:orientation="vertical"
            android:padding="5dp"
            android:rowCount="9"
            android:scrollbars="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:alignmentMode="alignMargins"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_column="0"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="2dp"
                            android:autoSizeTextType="uniform"
                            android:text="Buscar cargos não é necessário preencher \n todos os campos "
                            android:textAlignment="center"
                            android:textColor="#6f6f6f"
                            android:textSize="12sp"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="15dp"
                            android:layout_column="0"
                            android:layout_marginStart="2dp"
                            android:autoSizeTextType="uniform"
                            android:text="Cargo :"
                            android:textColor="#6f6f6f"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <AutoCompleteTextView
                            android:id="@+id/autoCompleteCargo1Vaga"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:background="#FAF8F8"
                            android:ems="10"
                            android:gravity="left"
                            android:textSize="14dp"
                            android:hint="Selecione o cargo"
                            android:completionThreshold="1"
                            android:completionHint="Selecione o cargo \n" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="15dp"
                            android:layout_column="0"
                            android:layout_marginStart="2dp"
                            android:autoSizeTextType="uniform"
                            android:text="Cargo :"
                            android:textColor="#6f6f6f"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <AutoCompleteTextView
                            android:id="@+id/autoCompleteCargo2Vaga"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:background="#FAF8F8"
                            android:ems="10"
                            android:gravity="left"
                            android:textSize="14dp"
                            android:hint="Selecione o cargo"
                            android:completionThreshold="1"
                            android:completionHint="Selecione o cargo \n" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="15dp"
                            android:layout_column="0"
                            android:layout_marginStart="2dp"
                            android:autoSizeTextType="uniform"
                            android:text="Cargo :"
                            android:textColor="#6f6f6f"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <AutoCompleteTextView
                            android:id="@+id/autoCompleteCargo3Vaga"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:background="#FAF8F8"
                            android:ems="10"
                            android:gravity="left"
                            android:textSize="14dp"
                            android:hint="Selecione o cargo"
                            android:completionThreshold="1"
                            android:completionHint="Selecione o cargo \n" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#cccc"
                            android:gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:textAppearance="?attr/textAppearanceListItemSmall"/>


                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_column="0"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="2dp"
                            android:autoSizeTextType="uniform"
                            android:text="Buscar competências não é necessário preencher \n todos os campos "
                            android:textAlignment="center"
                            android:textColor="#6f6f6f"
                            android:textSize="12sp"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="15dp"
                            android:layout_marginStart="2dp"
                            android:autoSizeTextType="uniform"
                            android:text=" Competência:"
                            android:textColor="#6f6f6f"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editTextCompetencia1Busca"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:background="#FAF8F8"
                            android:ems="10"
                            android:gravity="start|top"
                            android:hint=" Exemplo Ingles:"
                            android:inputType="textMultiLine"
                            android:textSize="14dp"
                            app:layout_constraintStart_toStartOf="parent" />



                      <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#cccc"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?attr/textAppearanceListItemSmall"/>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="15dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="10dp"
                            android:autoSizeTextType="uniform"
                            android:text="2ª Competência:"
                            android:textAlignment="center"
                            android:textColor="#6f6f6f"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="15dp"
                            android:layout_marginStart="2dp"
                            android:autoSizeTextType="uniform"
                            android:text=" Competência:"
                            android:textColor="#6f6f6f"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editTextCompetencia2Busca"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:background="#FAF8F8"
                            android:ems="10"
                            android:gravity="start|top"
                            android:hint=" Exemplo Excel"
                            android:inputType="textPersonName"
                            android:textSize="14dp"
                            app:layout_constraintStart_toStartOf="parent" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#cccc"
                            android:gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:textAppearance="?attr/textAppearanceListItemSmall"/>


                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="15dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="10dp"
                            android:autoSizeTextType="uniform"
                            android:text="3ª Competência:"
                            android:textAlignment="center"
                            android:textColor="#6f6f6f"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="15dp"
                            android:layout_marginStart="2dp"
                            android:autoSizeTextType="uniform"
                            android:text="Competência:"
                            android:textColor="#6f6f6f"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editTextCompetencia3Busca"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:background="#FAF8F8"
                            android:ems="10"
                            android:gravity="start|top"
                            android:hint="  Exemplo AutoCard"
                            android:inputType="textPersonName"
                            android:textSize="14dp"
                            app:layout_constraintStart_toStartOf="parent" />



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#cccc"
                            android:gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:textAppearance="?attr/textAppearanceListItemSmall"/>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="15dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="10dp"
                            android:autoSizeTextType="uniform"
                            android:text=" Estado"
                            android:textAlignment="center"
                            android:textColor="#6f6f6f"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="15dp"
                            android:layout_marginStart="2dp"
                            android:autoSizeTextType="uniform"
                            android:text=" Estado:"
                            android:textColor="#6f6f6f"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <AutoCompleteTextView
                            android:id="@+id/autoCompleteEstadoVaga"
                            android:layout_width="300dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:background="#FAF8F8"
                            android:ems="10"
                            android:gravity="left"
                            android:textSize="14dp"
                            android:hint="Selecione o estado"
                            android:completionThreshold="1"
                            android:completionHint="\n Selecione o estado" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="#cccc"
                            android:gravity="center_vertical"
                            android:layout_marginTop="15dp"
                            android:textAppearance="?attr/textAppearanceListItemSmall"/>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="15dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="10dp"
                            android:autoSizeTextType="uniform"
                            android:text=" Cidade"
                            android:textAlignment="center"
                            android:textColor="#6f6f6f"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="15dp"
                            android:layout_marginStart="2dp"
                            android:autoSizeTextType="uniform"
                            android:text=" Cidade:"
                            android:textColor="#6f6f6f"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <AutoCompleteTextView
                            android:id="@+id/autoCompleteCidadeVaga"
                            android:layout_width="300dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:background="#FAF8F8"
                            android:ems="10"
                            android:inputType="textAutoComplete"
                            android:gravity="left"
                            android:textSize="14dp"
                            android:hint="Selecione a cidade"
                            android:completionThreshold="1"
                            android:completionHint="\n Selecione a cidade" />




                        //BTN procurar
                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="right"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            app:cardCornerRadius="12dp"
                            android:background="#CCCC"
                            app:cardElevation="6dp"
                            >

                            <LinearLayout
                                android:id="@+id/btnProcurarVaga"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="3dp"
                                    android:text="Buscar Vagas"
                                    android:textAlignment="center"
                                    android:textColor="#6f6f6f"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

        </ScrollView>

    </RelativeLayout>




    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffff"
        app:headerLayout="@layout/header"
        app:itemTextColor="#000000"
        android:textSize="16dp"
        app:menu="@menu/menu_item" />


</androidx.drawerlayout.widget.DrawerLayout>
