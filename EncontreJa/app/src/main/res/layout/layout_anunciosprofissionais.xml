<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:openDrawer="end"
    android:id="@+id/root_profissionais"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    app:cardCornerRadius="5dp"
    app:cardElevation="6dp"
    android:layout_margin="5dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imgprofissional"
                    android:layout_width="48dp"
                    android:layout_height="39dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/vagamulher" />

                <TextView
                    android:id="@+id/nomeanuncio"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:text="Nome Anuncio"
                    android:textAlignment="textStart"
                    android:textColor="@color/v5"
                    android:textSize="18sp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/idadeanuncio"
                    android:layout_width="65dp"
                    android:layout_height="17dp"
                    android:text="23 Anos"
                    android:layout_gravity="top|end"
                    android:textAlignment="textEnd"
                    android:textColor="#6f6f6f"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:autoSizeTextType="uniform"
                    />

                //grid competencias

                <GridLayout
                    android:layout_width="390dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-340dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:columnCount="3">

                    ///////////////////////////////////////COMPETENCIA 1

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/competencia1anunciopro"
                            android:layout_width="130dp"
                            android:layout_height="15dp"
                            android:layout_column="0"
                            android:autoSizeTextType="uniform"
                            android:text="Competencia 1"
                            android:textAlignment="center"
                            android:textColor="@color/v5"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    ///////////////////////////////////////COMPETENCIA 2


                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/competencia2anunciopro"
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:autoSizeTextType="uniform"
                            android:text="Competencia 1"
                            android:textAlignment="center"
                            android:textColor="@color/v5"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    ///////////////////////////////////////COMPETENCIA 3


                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/competencia3anunciopro"
                            android:layout_width="130dp"
                            android:layout_height="15dp"
                            android:layout_column="1"
                            android:autoSizeTextType="uniform"
                            android:text="Competencia 1"
                            android:textAlignment="center"
                            android:textColor="@color/v5"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </GridLayout>

                <GridLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-400dp"
                    android:layout_marginTop="55dp"
                    android:columnCount="3">

                    //separar

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:background="@drawable/separacao_campo"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/competencia1nivelpro"
                            android:layout_width="132dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:autoSizeTextType="uniform"
                            android:text="Avançado"
                            android:textAlignment="center"
                            android:textColor="@color/v4"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_gravity="start|bottom"
                        android:background="@drawable/separacao_campo"

                        android:orientation="horizontal">

                        <TextView

                            android:id="@+id/competencia2nivelpro"
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:autoSizeTextType="uniform"
                            android:text="Médio"
                            android:textAlignment="center"
                            android:textColor="@color/v4"
                            android:textSize="9sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_gravity="start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/competencia3nivelpro"
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:autoSizeTextType="uniform"
                            android:text="Básico"
                            android:textAlignment="center"
                            android:textColor="@color/v4"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </GridLayout>

                <GridLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-400dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="10dp"
                    android:columnCount="2">

                    //separar

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_gravity="start|bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/profissionalcidadeestado"
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="2dp"
                            android:autoSizeTextType="uniform"
                            android:text="Estado-Cidade"
                            android:textAlignment="textEnd"
                            android:textColor="#6f6f6f"
                            android:textSize="6sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </GridLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

